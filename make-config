#!/bin/bash
. ./config

cat << EOF > config.R
# Autogenerated, do not edit
suffix<-"$suffix"
report_org<-$report_org
report_dl<-$report_dl
days<-$days
hours<-$hours
filter_dependent_jobs<-$filter_dependent_jobs
EOF

cat << EOF > config.py
# Autogenerated, do not edit
suffix="$suffix"
EOF

type git > /dev/null 2>&1 || exit 0
git pull

if [ ! -d system-utilisation ] ; then git clone $repos/system-utilisation.git ; fi
(cd system-utilisation && git pull)

if [ ${dgx:-0} -eq 1 ] ; then
 if [ ! -d dgx ] ; then git clone $repos/usage-dgx.git dgx ; fi
 (cd dgx && git pull)
fi
