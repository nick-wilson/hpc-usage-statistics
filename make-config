#!/bin/bash
. ./config

cat << EOF > config.R
# Autogenerated, do not edit
suffix<-"$suffix"
report_org<-$report_org
report_dl<-$report_dl
days<-$days
hours<-$hours
filter_dependent_jobs<-$filter_dependent_jobs
EOF

cat << EOF > config.py
# Autogenerated, do not edit
suffix="$suffix"
EOF

if [ ! -d dgx ] ; then git clone file:///app/src/repos/usage-dgx.git dgx ; fi
if [ ! -d system-utilisation ] ; then git clone file:///app/src/repos/system-utilisation.git ; fi

type git > /dev/null 2>&1 && git pull
type git > /dev/null 2>&1 && (cd dgx && git pull)
type git > /dev/null 2>&1 && (cd system-utilisation && git pull)
